@model SalesOrderApp.ViewModels.OrderHeaderViewModel

<h5>Order Header Details</h5>
<div class="form-group mt-1">
    <label asp-for="OrderNumber" class="control-label"></label>
    <input asp-for="OrderNumber" class="form-control">
    <span asp-validation-for="OrderNumber" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="OrderType" class="control-label"></label>
    <select asp-for="OrderType" asp-items="Html.GetEnumSelectList<OrderTypeEnum>()" class="form-control"></select>
    <span asp-validation-for="OrderType" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="OrderStatus" class="control-label"></label>
    <select asp-for="OrderStatus" asp-items="Html.GetEnumSelectList<OrderStatusEnum>()" class="form-control"></select>
    <span asp-validation-for="OrderStatus" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="CustomerName" class="control-label"></label>
    <input asp-for="CustomerName" class="form-control">
    <span asp-validation-for="CustomerName" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="CreateDate" class="control-label"></label>
    <input asp-for="CreateDate" class="form-control" type="date">
    <span asp-validation-for="CreateDate" class="text-danger"></span>
</div>