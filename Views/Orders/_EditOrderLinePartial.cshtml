@model SalesOrderApp.ViewModels.OrdersEditLineViewModel

@if (Model != null)
{
    <div class="modal" id="editOrderLineModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Order Line</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editOrderLineForm" method="post" asp-action="EditOrderLine" asp-controller="Orders">
                        <input type="hidden" asp-for="SalesOrderId">
                        <input type="hidden" asp-for="OrderLineId">

                        <div class="form-group mt-1">
                            <label asp-for="OrderLine.ProductCode" class="control-label">Product Code</label>
                            <input asp-for="OrderLine.ProductCode" class="form-control">
                            <span asp-validation-for="OrderLine.ProductCode" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="OrderLine.ProductType" class="control-label">Product Type</label>
                            <select asp-for="OrderLine.ProductType" asp-items="Html.GetEnumSelectList<ProductTypeEnum>()" class="form-control"></select>
                            <span asp-validation-for="OrderLine.ProductType" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="OrderLine.CostPrice" class="control-label">Cost Price</label>
                            <input asp-for="OrderLine.CostPrice" class="form-control">
                            <span asp-validation-for="OrderLine.CostPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="OrderLine.SalesPrice" class="control-label">Sales Price</label>
                            <input asp-for="OrderLine.SalesPrice" class="form-control">
                            <span asp-validation-for="OrderLine.SalesPrice" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-1">
                            <label asp-for="OrderLine.Quantity" class="control-label">Quantity</label>
                            <input asp-for="OrderLine.Quantity" class="form-control">
                            <span asp-validation-for="OrderLine.Quantity" class="text-danger"></span>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Discard changes</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}