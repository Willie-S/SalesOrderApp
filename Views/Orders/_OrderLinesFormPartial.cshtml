@model SalesOrderApp.ViewModels.OrdersAddViewModel

@for (var i = 0; i < Model.OrderLines.Count; i++)
{
    <div class="order-line mb-3">
        <div class="mb-3">
            <label asp-for="OrderLines[@i].ProductCode" class="form-label"></label>
            <input asp-for="OrderLines[@i].ProductCode" class="form-control" required>
            <span asp-validation-for="OrderLines[@i].ProductCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderLines[@i].ProductType" class="form-label"></label>
            <select asp-for="OrderLines[@i].ProductType" class="form-control">
                <option value="">Select Product Type</option>
                @foreach (var type in Enum.GetValues(typeof(SalesOrderApp.Models.ProductTypeEnum)))
                {
                    <option value="@type">@type</option>
                }
            </select>
            <span asp-validation-for="OrderLines[@i].ProductType" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderLines[@i].CostPrice" class="form-label"></label>
            <input asp-for="OrderLines[@i].CostPrice" class="form-control" required>
            <span asp-validation-for="OrderLines[@i].CostPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderLines[@i].SalesPrice" class="form-label"></label>
            <input asp-for="OrderLines[@i].SalesPrice" class="form-control" required>
            <span asp-validation-for="OrderLines[@i].SalesPrice" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="OrderLines[@i].Quantity" class="form-label"></label>
            <input asp-for="OrderLines[@i].Quantity" class="form-control" required>
            <span asp-validation-for="OrderLines[@i].Quantity" class="text-danger"></span>
        </div>

        <button type="button" class="btn btn-danger mt-2 remove-line">Remove Line</button>
    </div>
}