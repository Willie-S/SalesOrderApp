@model SalesOrderApp.ViewModels.OrderLineViewModel

<div class="form-group mt-1">
    <label asp-for="ProductCode" class="control-label">Product Code</label>
    <input asp-for="ProductCode" class="form-control">
    <span asp-validation-for="ProductCode" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="ProductType" class="control-label">Product Type</label>
    <select asp-for="ProductType" asp-items="Html.GetEnumSelectList<ProductTypeEnum>()" class="form-control"></select>
    <span asp-validation-for="ProductType" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="CostPrice" class="control-label">Cost Price</label>
    <input asp-for="CostPrice" class="form-control">
    <span asp-validation-for="CostPrice" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="SalesPrice" class="control-label">Sales Price</label>
    <input asp-for="SalesPrice" class="form-control">
    <span asp-validation-for="SalesPrice" class="text-danger"></span>
</div>
<div class="form-group mt-1">
    <label asp-for="Quantity" class="control-label">Quantity</label>
    <input asp-for="Quantity" class="form-control">
    <span asp-validation-for="Quantity" class="text-danger"></span>
</div>